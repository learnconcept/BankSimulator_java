<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="APP_LOG_ROOT">logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appender for All Logs -->
        <RollingFile name="FileAppender"
                     fileName="${APP_LOG_ROOT}/banking-simulator.log"
                     filePattern="${APP_LOG_ROOT}/banking-simulator-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Separate Appender for Account Management -->
        <RollingFile name="AccountManagementAppender"
                     fileName="${APP_LOG_ROOT}/account-management.log"
                     filePattern="${APP_LOG_ROOT}/account-management-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

        <!-- Separate Appender for Transactions -->
        <RollingFile name="TransactionAppender"
                     fileName="${APP_LOG_ROOT}/transactions.log"
                     filePattern="${APP_LOG_ROOT}/transactions-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

        <!-- Separate Appender for Errors -->
        <RollingFile name="ErrorAppender"
                     fileName="${APP_LOG_ROOT}/errors.log"
                     filePattern="${APP_LOG_ROOT}/errors-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Account Management Specific Logger -->
        <Logger name="com.banking.engine.AccountManagementEngine" level="DEBUG" additivity="false">
            <AppenderRef ref="AccountManagementAppender"/>
            <AppenderRef ref="Console" level="INFO"/>
            <AppenderRef ref="ErrorAppender" level="ERROR"/>
        </Logger>

        <!-- Transaction Processing Specific Logger -->
        <Logger name="com.banking.engine.TransactionProcessingSystem" level="DEBUG" additivity="false">
            <AppenderRef ref="TransactionAppender"/>
            <AppenderRef ref="Console" level="INFO"/>
            <AppenderRef ref="ErrorAppender" level="ERROR"/>
        </Logger>

        <!-- Database Logger -->
        <Logger name="com.banking.database.DatabaseManager" level="INFO" additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console" level="INFO"/>
            <AppenderRef ref="ErrorAppender" level="ERROR"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ErrorAppender" level="ERROR"/>
        </Root>
    </Loggers>
</Configuration>